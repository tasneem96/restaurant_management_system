<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ash"
    android:orientation="vertical"
    tools:context=".Bkash">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A/C Holder Name"
        android:textColor="@color/white1"
        android:layout_marginTop="70sp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/acHolderBkash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter A/C Holder's name"
        android:textColor="@color/white"
        android:textColorHint="@color/white1"
        android:textStyle="italic"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textSize="20dp"
        android:textColor="@color/white1"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <EditText
        android:textColorHint="@color/white1"
        android:id="@+id/mobileNumBkash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Enter Mobile number"
        android:textStyle="italic"
        />
    <Button
        android:id="@+id/proceedButtonBkash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>


</LinearLayout>